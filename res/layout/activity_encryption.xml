<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Encryption" >

    <EditText
        android:id="@+id/encryptKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textMessage"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="Encryption Key" 
        android:inputType = "text"
        />

    <EditText
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Enter text message to be encrypted here."
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:inputType = "text"
        />

    <EditText
        android:id="@+id/telNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="To: xxx-xxx-xxx"
        android:inputType="phone" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/sendEncrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textMessage"
        android:layout_alignRight="@+id/encryptKey"
        android:layout_below="@+id/encryptKey"
        android:layout_marginTop="25dp"
        android:text="Send" />

    <TextView
        android:id="@+id/previewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/telNum"
        android:layout_alignRight="@+id/telNum"
        android:layout_below="@+id/sendEncrypt"
        android:layout_marginTop="29dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff002a" />

</RelativeLayout>